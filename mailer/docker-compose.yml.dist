version: '3.5'

services:
  
  symfony-api-mailer:
    container_name: symfony-api-mailer
    build:
      context: docker/php
      args:
        UID: $U_ID
    environment:
      PHP_IDE_CONFIG: serverName=Docker
      PHP_XDEBUG_ENABLED: 1
      XDEBUG_CONFIG: remote_host=172.24.48.1 remote_port=9005 # Linux
    volumes:
      - ./:/appdata/www
      - ./docker/php/xdebug-linux.ini:/usr/local/etc/php/conf.d/xdebug.ini
      - ~/.ssh/id_rsa:/home/appuser/.ssh/id_rsa # Cambiar id_rsa por el nombre de tu llave
    depends_on:
      - symfony-api-mailer-db
    networks:
      - cinema-booking-network

  symfony-api-mailer-db:
    container_name: symfony-api-mailer-db
    image: mysql:8.0
    ports:
      - 36100:3306
    environment:
      MYSQL_DATABASE: symfony_mailer_db
      MYSQL_USER: user
      MYSQL_PASSWORD: password
      MYSQL_ROOT_PASSWORD: root
    command: mysqld --sql_mode="STRICT_ALL_TABLES,NO_ENGINE_SUBSTITUTION"
    volumes:
      - symfony-api-mailer-db-data:/var/lib/mysql
    networks:
      - cinema-booking-network

  #Intercepta los correos enviados por el Mailer para dev y asi no tener que ir al correo real
  symfony-api-mailcatcher:
    container_name: symfony-api-mailcatcher
    image: schickling/mailcatcher 
    ports:
      - 1080:1080
      - 1025:1025
    depends_on:
      - symfony-api-mailer-db
    networks:
      - cinema-booking-network
    
volumes:
  symfony-api-mailer-db-data:


networks:
  cinema-booking-network:
    external: true
