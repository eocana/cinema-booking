<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\CreditCard" table="credit_cards">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="holderName" type="string" column="holder_name" length="255" nullable="false"/>
        <field name="cardNumber" type="string" column="card_number" length="19" nullable="false"/>
        <field name="expiryDate" type="date" column="expiry_date" nullable="false"/>

        <many-to-one field="user" target-entity="App\Entity\User" inversed-by="creditCards">
            <join-column name="user_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>